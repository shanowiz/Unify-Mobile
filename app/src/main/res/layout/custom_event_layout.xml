<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/list_row_selector"
        android:padding="8dp">

        <ImageView
            android:id="@+id/eventImage"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/all_rounded_radius"
            android:padding="5dp"
            android:scaleType="fitXY"
            app:src="@drawable/no_image" />

        <TextView
            android:id="@+id/eventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/eventImage"
            android:padding="3dp"
            android:text="Event"
            android:textSize="18dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"/>


        <TextView
            android:id="@+id/eventDate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventName"
            android:layout_toEndOf="@+id/eventImage"
            android:padding="3dp"
            android:text="Date:"
            android:textSize="15dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/eventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/eventDate1"
            android:layout_alignBottom="@+id/eventDate1"
            android:layout_toEndOf="@+id/eventDate1"
            android:padding="3dp"
            android:text="TextView"
            android:textSize="15dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"/>


        <TextView
            android:id="@+id/eventLocation1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/eventLocation"
            android:layout_alignBottom="@+id/eventLocation"
            android:layout_toEndOf="@+id/eventImage"
            android:padding="3dp"
            android:text="Location:"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eventLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventDate"
            android:layout_toEndOf="@+id/eventLocation1"
            android:padding="3dp"
            android:text="TextView"
            android:textSize="15dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>